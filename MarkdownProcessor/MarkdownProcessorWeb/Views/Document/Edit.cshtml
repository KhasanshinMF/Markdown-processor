@model MarkdownProcessorWeb.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Редактировать документ";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <h4>
            <label asp-for="Title"></label>
        </h4>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <h4>Markdown</h4>
            <textarea id="markdown-content" asp-for="Content" class="form-control" rows="16"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <h4>HTML</h4>
            <pre id="html-content" class="form-control" style="height: 400px; overflow-y: auto; white-space: pre-wrap;"></pre>
        </div>
    </div>
    <div class="form-group form-check">
        <input asp-for="IsPublic" class="form-check-input"/>
        <label asp-for="IsPublic" class="form-check-label">Публичный документ</label>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a href="/Document/Index" class="btn btn-secondary">Назад</a>

    <button type="button" id="generate-link-btn" class="btn btn-info">Сгенерировать ссылку</button>

    <button type="button" id="add-user-btn" class="btn btn-success" data-toggle="modal" data-target="#addUserModal">Добавить пользователя</button>
</form>

<div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Добавить пользователя</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-user-form">
                    <div class="form-group">
                        <label for="username">Имя пользователя</label>
                        <input type="text" class="form-control" id="username" name="username" required />
                    </div>
                    <div class="form-group">
                        <label for="accessLevel">Уровень доступа</label>
                        <select class="form-control" id="accessLevel" name="accessLevel">
                            <option value="Reader">Читатель</option>
                            <option value="Editor">Редактор</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" id="confirm-add-user-btn" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</div>

<div id="generated-link-section" class="mt-3" style="display: none;">
    <h4>Ссылка на документ:</h4>
    <a id="generated-link" target="_blank" class="btn btn-link"></a>
</div>

<script src="~/js/convertMdToHtml.js"></script>
<script src="~/js/generateLink.js"></script>
<script src="~/js/addUser.js"></script>