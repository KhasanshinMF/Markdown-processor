@model MarkdownProcessorWeb.Models.Document

@{
    ViewData["Title"] = "Просмотр документа";
}

<div class="form-group mb-2">
    <h4><p class="mb-2">Название</p></h4>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="row mb-2">
    <div class="col-md-6">
        <h4>Markdown</h4>
        <textarea id="markdown-content" class="form-control" style="height: 470px; overflow-y: auto">@Model.Content</textarea>
    </div>
    <div class="col-md-6">
        <h4>HTML</h4>
        <pre id="html-content" class="form-control" style="height: 470px; overflow-y: auto; white-space: pre-wrap;"></pre>
    </div>
</div>

<a href="/Document/Index" class="btn btn-danger">Назад</a>

<script src="~/js/convertMdToHtml.js"></script>

